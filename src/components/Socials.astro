---
import { Image } from "@astrojs/image/components";

export interface Props {
	icon: string;
	alt: string;
	text: string;
	href: string;
	size: string;
}

const { icon, alt, text, href, size } = Astro.props;
---

<li class="social">
	<a href={href}>
		<div>
			<Image
				src={icon}
				alt={alt}
				aspectRatio="1:1"
				height={size}
				fit="fill"
				format="png"
			/>
		</div>
		<p>{text}</p>
	</a>
</li>
<style>
	p {
		margin: 0;
		font-weight: bold;
	}
	.social {
		display: inline-block;

		padding: 0 2% 0 2%;
	}
	.social > a {
		display: flex;
		align-items: center;
		flex-direction: column;
		color: var(--accent-orange);
		text-decoration-line: none;
	}

	a:hover {
		color: var(--accent-blue);
	}
	a:hover > div {
		background-color: var(--accent-blue);
	}

	div {
		background-color: var(--accent-orange);
		border-radius: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		width: 2em;
		height: 2em;
	}
</style>
